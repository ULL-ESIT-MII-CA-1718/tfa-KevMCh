extends ../layout

block content
  script(src='/javascripts/scores/modify.js')
  div(class='row')
    div(class='col-lg-12')
      h2(class='title') Modificar puntuación

  div#updateScore(class='row')
    div(class='col-lg-3 offset-lg-3')
    div(class='col-lg-3')
      input#inputID(type='hidden', value=score._id)
      br
      label Comida:
      br
      select#inputMeal
        if meals
          each meal in meals
            if score.meal._id = meal._id
              option(value=meal._id selected='selected') #{meal.name}
            else
              option(value=meal._id) #{meal.name}
      br
      label Puntuación:
      br
      input#inputPoints(type='number', placeholder='Puntos', step='0.01', min='1', max='5', value=score.points)
    div(class='col-lg-1')


    div(class='col-lg-3')
      button#btnUpdateScore Modificar Puntuación
